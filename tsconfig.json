{
    "compilerOptions": {
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es5",
        "resolveJsonModule": true,
        "esModuleInterop": true ,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [  
            "./src/types", 
            "./node_modules/@types"
        ],
        "lib": [ "es2015", "dom" ],
    },
    "exclude": [
        "**/node_modules", 
        "**/.*/",
        "*.stories.ts",
        "*.stories.tsx"
    ],
    "include": [
        "./src/**/**/*"
    ]
}